<h2>Conectar</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group w-25">
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder:"Email", autocomplete: "email" %>
  </div>

  <div class="field form-group w-25">
    <%= f.password_field :password, class:"form-control", placeholder:"Senha", autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Conectar", class: 'btn btn-secondary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>